{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],

    "module": "Node16",
    "moduleResolution": "Node16",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
